<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activityNotificationImage"
        android:layout_width="@dimen/viewholder_notification_image_size"
        android:layout_height="@dimen/viewholder_notification_image_size"
        android:layout_marginRight="@dimen/viewholder_notification_image_margin_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/activityNotificationMessage"
        app:layout_constraintRight_toLeftOf="@id/activityNotificationMessage"
        app:layout_constraintTop_toTopOf="@id/activityNotificationMessage"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/activityNotificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/viewholder_notification_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="This is some message" />

    <Button
        android:id="@+id/activitySendNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activitysecond_notification_button_margin_bottom"
        android:text="@string/send_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>